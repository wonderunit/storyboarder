{
  "name": "storyboarder",
  "productName": "Storyboarder",
  "version": "1.3.0",
  "description": "The fastest way to storyboard.",
  "main": "src/js/main.js",
  "scripts": {
    "start": "electron .",
    "dist:mac": "build -m",
    "dist:win": "build -w",
    "dist:linux": "build -l",
    "dist": "build -mwl",
    "test": "mocha $(find test -name '*[!renderer].test.js') && electron-mocha --renderer test/*.renderer.test.js test/**/*.renderer.test.js && electron-mocha test/**/*.main.test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wonderunit/storyboarder.git"
  },
  "keywords": [
    "fountain",
    "storyboard",
    "storyboarder"
  ],
  "author": "Wonder Unit Inc.",
  "build": {
    "asar": true,
    "appId": "com.wonderunit.storyboarder",
    "compression": "maximum",
    "files": [
      "**/*",
      "!*.md",
      "!DEVELOPERS.md",
      "!README.md",
      "!notes",
      "!test"
    ],
    "mac": {
      "icon": "build/icon.icns"
    },
    "win": {
      "icon": "build/icon.ico"
    },
    "dmg": {
      "background": "build/background.png",
      "icon": "build/icon.icns",
      "iconSize": 140,
      "contents": [
        {
          "x": 120,
          "y": 250
        },
        {
          "x": 420,
          "y": 250,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "category": "Graphics"
    },
    "fileAssociations": {
      "ext": "storyboarder",
      "name": "Storyboarder file",
      "icon": "build/fileassociation/file"
    },
    "protocols": [
      {
        "name": "Storyboarder",
        "schemes": [
          "storyboarder"
        ]
      }
    ],
    "nsis": {
      "perMachine": true
    }
  },
  "devDependencies": {
    "electron": "1.8.1",
    "electron-builder": "19.43.0",
    "electron-mocha": "4.0.0",
    "mocha": "3.5.0",
    "mock-fs": "4.4.1"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "1.0.13",
    "ag-psd": "^1.2.0",
    "archiver": "2.0.3",
    "chokidar": "1.7.0",
    "color-js": "^1.0.4",
    "eases": "1.0.8",
    "electron-google-analytics": "0.0.16",
    "electron-is-dev": "0.3.0",
    "electron-redux": "1.3.1",
    "electron-updater": "2.15.0",
    "execa": "0.8.0",
    "express": "^4.15.4",
    "fraction.js": "4.0.3",
    "fs-extra": "4.0.2",
    "gifencoder": "^1.1.0",
    "gl-vec2": "^1.0.0",
    "jsfeat": "0.0.8",
    "moment": "^2.18.1",
    "pdfjs-dist": "1.9.426",
    "pdfkit": "^0.8.3",
    "plist": "2.1.0",
    "qr-image": "^3.2.0",
    "qrcode-reader": "^1.0.0",
    "ramda": "0.25.0",
    "redux": "3.7.2",
    "redux-promise": "0.5.3",
    "redux-thunk": "2.2.0",
    "socket.io": "^2.0.3",
    "tether": "1.4.0",
    "tether-tooltip": "1.2.0",
    "tmp": "0.0.33",
    "tonal": "0.69.9",
    "tone": "0.12.0",
    "trash": "4.0.1",
    "wav-encoder": "1.3.0",
    "xml2js": "0.4.19"
  }
}
